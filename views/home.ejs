<html>
<header>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"
        integrity="sha384-SZXxX4whJ79/gErwcOYf+zWLeJdY/qpuqC4cAa9rOGUstPomtqpuNWT9wdPEn2fk" crossorigin="anonymous">
    <!--using it cz we r adding ejs and titile is an obj here -->

    <title>
        <%= title %>
    </title>
</header>

<body>
    <h1>Contact - List</h1>
    <div id="list">

        <ul>
            <% for(let i of contactlist) { %>
                <li>
                    <div>
                        <p>
                            <%= i.name %>
                        </p>
                    </div>
                    <div>
                        <p>
                            <%= i.phone %>
                                <a href="/delete-contact/ ?phone =<%= i.phone %>">
                                    <i class="fas fa-user-slash"></i></a>
                        </p>
                    </div>
                </li>

                <% } %>
        </ul>
        <div id="main-div">
            <form action="/create_contact" method="POST">
                <input type="text" name="name" placeholder="enter name">
                <input type="number" name="phone" placeholder="enter number">
                <button type="submit">ADD</button>
            </form>
        </div>
    </div>

    <script type="text/javascript" src="/js/home.js"></script>
</body>

</html>